<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme Style -->
    <style name="defalt_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#217CA3</item>
        <item name="colorPrimaryVariant">#005074</item>
        <item name="colorAccent">#fa7f72 </item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.Material.Light.RatingBar.Small" tools:targetApi="lollipop"></style>

    <!-- RecyclerView List -->
    <style name="recycler_view">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="list_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="title">@string/toolbar_tittle</item>
    </style>

    <!-- CardView -->
    <style name="card_view" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">15dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="place_holder">
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="card_view_constraint" parent="CardView">
        <item name="android:padding">10dp</item>
    </style>

    <style name="game_tittle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="released_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="game_detail_released_date">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="game_detail_container">
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="platform_item">
        <item name="android:background">#fc7f85</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="platform_item_card">
        <item name="cardCornerRadius">7dp</item>
    </style>

    <style name="platform_item_text">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="rv_platforms_items">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="tv_game_description">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">gravity</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>